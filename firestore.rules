rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // üë§ REGRAS PARA USU√ÅRIOS
    match /users/{userId} {
      // Usu√°rios s√≥ podem ler/escrever seus pr√≥prios dados
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // PERMISS√ÉO TEMPOR√ÅRIA PARA DESENVOLVIMENTO - sites podem ser lidos publicamente
      allow read: if true;
      
      // üè† SITES DOS USU√ÅRIOS (subcole√ß√£o)
      match /sites/{siteId} {
        // Usu√°rios s√≥ podem acessar seus pr√≥prios sites para edi√ß√£o
        allow write: if request.auth != null && request.auth.uid == userId;
        
        // PERMISS√ÉO TEMPOR√ÅRIA PARA DESENVOLVIMENTO - qualquer um pode ler
        allow read: if true;
      }
    }
    
    // üåê SITES GLOBAIS (para slugs √∫nicos e sites publicados)
    match /sites/{siteId} {
      // Qualquer um pode ler sites (para visualiza√ß√£o p√∫blica)
      allow read: if true;
      
      // Apenas o dono pode escrever
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
        
      // Permitir cria√ß√£o se o usu√°rio est√° autenticado e √© o dono
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // üìÑ SITES PUBLICADOS (HTML final)
    match /published_sites/{siteId} {
      // Qualquer um pode ler sites publicados
      allow read: if true;
      
      // Apenas o dono pode publicar/atualizar
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
        
      // Permitir cria√ß√£o se o usu√°rio est√° autenticado
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // üé® TEMPLATES (apenas leitura para todos)
    match /templates/{templateId} {
      // Todos podem ler templates
      allow read: if true;
      
      // Apenas admins podem escrever (adicione UIDs de admin aqui)
      allow write: if request.auth != null && 
        request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2'];
    }
    
    // üìä ANALYTICS/STATS (opcional - para m√©tricas)
    match /analytics/{document=**} {
      // Permitir escrita para tracking de visualiza√ß√µes
      allow read, write: if true;
    }
    
    // üîí REGRA PADR√ÉO - NEGAR TUDO QUE N√ÉO FOI ESPECIFICADO
    match /{document=**} {
      allow read, write: if false;
    }
  }
}